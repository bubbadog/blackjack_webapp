<form action='/bet' method='post'>
  <fieldset>
    <h4>Make a bet for this round.</h4>
    <p> <%= session[:player_name] %> has $<%= session[:player_amount] %></p>
    <input class='input-mini' type='text' name='bet'>
    <br>
    <button type='submit' class='btn'>Place bet</button>
  </fieldset>
</form>
