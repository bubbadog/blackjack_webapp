<div class='well'>
  <form action='/bet' method='post'>
    <fieldset>
      <h4>Make a bet for this round.</h4>
      <p> <%= session[:player_name] %> has $<%= session[:player_amount] %></p>
      <input class='input-mini' type='text' name='bet_amount' autofocus='autofocus'>
      <br>
      <input type='submit' class='btn' value='Place bet' />
    </fieldset>
  </form>
</div>
